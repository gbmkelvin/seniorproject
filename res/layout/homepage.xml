<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFCC99"
            android:drawableLeft="@drawable/logo"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="  Welcome to call for cooking"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="normal" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.00" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_fish_stew" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/pic_mapo_tufu" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pic_potato_beef" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.01" >

        <Button
            android:id="@+id/btt_seeallrecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:background="#FF6666"
            android:drawableTop="@drawable/ic_recipe"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="See All Recipe" />

        <Button
            android:id="@+id/btt_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btt_seeallrecipe"
            android:layout_marginTop="23dp"
            android:background="#FF6666"
            android:drawableTop="@drawable/ic_action_search"
            android:paddingBottom="2dp"
            android:text="Search recipe" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFCC99" >

        <ImageButton
            android:id="@+id/image_btt_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.63"
            android:src="@drawable/index_home_icon" />

        <ImageButton
            android:id="@+id/image_btt_info"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:src="@drawable/index_info_icon" />



        <ImageButton
            android:id="@+id/image_btt_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:src="@drawable/index_setting_icon" />
    </LinearLayout>

</LinearLayout>